DATABASE_URL="postgresql://user:password@host:port/database"

# MongoDB connection string (used by Mongoose). Ensure this is kept secret and rotated if exposed.
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=ease"

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# NextAuth
NEXTAUTH_URL="http://localhost:3000" # Use this for local development
# NEXTAUTH_URL="https://your-domain.vercel.app" # Uncomment for production
NEXTAUTH_SECRET="your_secure_random_secret_key" # regenerate in production
AUTH_TRUST_HOST="true"

# NextAuth Email Provider
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@gmail.com
EMAIL_SERVER_PASSWORD=your_app_password
EMAIL_FROM="Your App <your_email@gmail.com>"

# Enable credentials provider
ENABLE_CREDENTIALS=true

# Email SMTP (for other uses)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your app password"
SMTP_FROM_NAME="Your App"
SMTP_SECURE="false"